<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.fragment.TabButton">

    <Button
        android:id="@+id/btn_intercept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/btn_select"

        android:text="@string/tab_button_intercept"
        android:textColor="@color/btn_normal" />

    <Button
        android:id="@+id/btn_blalknume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/btn_normal"
        android:text="@string/tab_button_blackmenu"
        android:textColor="@color/btn_select" />
</LinearLayout>
